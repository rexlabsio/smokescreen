<?xml version="1.0"?>
<ruleset name="RexPSR2Standard">
    <description>Rex PSR2 Standard</description>
    <arg name="colors"/>

    <!-- check directories -->
    <file>src</file>
    <file>tests</file>

    <!-- start with psr2 -->
    <rule ref="PSR2"/>

    <!-- allow snake case for test methods -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>
</ruleset>
