{
  "name": "rexlabs/smokescreen",
  "description": "Smokescreen is a PHP library for transforming and serializing data such as API responses.",
  "keywords": [
    "smokescreen",
    "api",
    "transform",
    "json",
    "hypermedia",
    "webservices",
    "serializer",
    "fractal"
  ],
  "authors": [
    {
      "name": "Jodie Dunlop",
      "email": "jodie.dunlop@rexsoftware.com.au"
    }
  ],
  "require": {
    "php": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5.7",
    "codedungeon/phpunit-result-printer": "^0.5.4",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "autoload": {
    "psr-4": {
      "Rexlabs\\Smokescreen\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rexlabs\\Smokescreen\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "tests": "phpunit --colors=always",
    "coverage": "phpunit --coverage-html ./tests/report",
    "check-style": "phpcs -p -s --cache",
    "fix-style": "phpcbf -p -s"
  },
  "license": "MIT"
}
