{
  "name": "rexlabs/smokescreen",
  "authors": [
    {
      "name": "Jodie Dunlop",
      "email": "jodie.dunlop@rexsoftware.com.au"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^6.5.7",
    "codedungeon/phpunit-result-printer": "^0.5.4"
  },
  "autoload": {
    "psr-4": {
      "Rexlabs\\Smokescreen\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rexlabs\\Smokescreen\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "tests": "phpunit --colors=always",
    "coverage": "phpunit --coverage-html ./tests/report"
  }
}
